
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/main.css" type="text/css">
        <title>Node</title>
    </head>
    <body>
      <%- include('../includes/navigation') %> 


      <div class="container align-center">
        <div class="row">
            <div class="col-md-12">
                <h1>SERVER MONITORING</h1>
            </div>
        </div>
      </div>

      <div class="container card-container-margin-top">  
            <% if(sites.length > 0){ %>
              <div class="row">
                <% for(let site of sites){ %>
                  <div class="col-12 col-md-4 card-margin-bottom">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                          <h5 class="card-title"><%= site.site %> Sites</h5>
                          <p class="card-text">View all nodes in <%= site.state %> State</p>
                          <a href="<%= site.url %>" class="btn btn-info card-button-margin-right" target="_blank">Visit site</a>
                          <% if(isAuthenticated){ %>
                              <a href="/admin/editsite/<%= site._id %>?edit=true" class="btn btn-success card-button-margin-right">Edit</a>
                              <a href="#" class="btn btn-danger card-button-margin-right">Delete</a>
                          <% } %> 
                          
                        </div>
                      </div>
                  </div>
                <% } %> 
              </div>
            <% } else { %>
                <h3>Site is empty!</h3>
                <a href="/admin/addsite" class="btn btn-info">Add Site</a>
            <% } %>          
       </div>

    <script src="/bootstrap/js/jquery.js"></script>
    <script src="/bootstrap/js/popper.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script>
      const logoutLink = document.getElementById('logoutLink')
      logoutLink.addEventListener('click', (event) => {
        event.preventDefault();
        document.forms['logoutForm'].submit();
      })
    </script>
  </body>
</html>

